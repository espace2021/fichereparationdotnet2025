@model FicheReparation.Models.Client

@{
    ViewData["Title"] = "Ajouter un Client";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nom" class="control-label"></label>
        <input asp-for="Nom" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label asp-for="Adresse" class="control-label"></label>
        <input asp-for="Adresse" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label asp-for="NumTel" class="control-label"></label>
        <input asp-for="NumTel" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" required type="email" />
    </div>
    
    <button type="submit" class="btn btn-primary">Ajouter</button>
</form>


