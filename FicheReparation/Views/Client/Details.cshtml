@model FicheReparation.Models.Client

@{
    ViewData["Title"] = "Détails du Client";
}

<h2 class="text-center mt-3">Détails du Client</h2>

<div class="card shadow-sm p-4">
    <div class="card-body">
        <h4 class="card-title">@Model.Nom</h4>
        <hr />

        <p><strong>Adresse :</strong> @Model.Adresse</p>
        <p><strong>Téléphone :</strong> @Model.NumTel</p>
        <p><strong>Email :</strong> @Model.Email</p>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
        </div>
    </div>
</div>
